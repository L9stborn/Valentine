<script>
// ROSE PETALS GENERATOR
for (let i = 0; i < 20; i++) {
  const petal = document.createElement("div");
  petal.className = "petal";
  petal.innerHTML = "üåπ";
  petal.style.left = Math.random() * 100 + "vw";
  petal.style.animationDuration = 5 + Math.random() * 5 + "s";
  petal.style.fontSize = 18 + Math.random() * 12 + "px";
  document.body.appendChild(petal);
}

// NO BUTTON RUN + SHAKE + TEASE
function runAway() {
  const noBtn = document.getElementById("no");
  const x = Math.random() * 260;
  const y = Math.random() * 80;
  noBtn.style.left = x + "px";
  noBtn.style.top = y + "px";
  noBtn.style.animation = "shake 0.4s";

  const teases = [
    "Hey üòè try again",
    "Not allowed üòå",
    "Nice try üòÇ",
    "You know you want yes ‚ù§Ô∏è",
    "Stop playing üòÑ"
  ];

  noBtn.innerText = teases[Math.floor(Math.random() * teases.length)];
}

